<p id="notice"><%= notice %></p>

<h1>Listing Zologicos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zologicos.each do |zologico| %>
      <tr>
        <td><%= zologico.name %></td>
        <td><%= link_to 'Show', zologico %></td>
        <td><%= link_to 'Edit', edit_zologico_path(zologico) %></td>
        <td><%= link_to 'Destroy', zologico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

